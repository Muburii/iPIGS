<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="10dp"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageIcon"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:src="@drawable/homepage"
                        android:contentDescription="@string/home_icon"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/farmNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        tools:text="Farm Name" />
                </LinearLayout>

                <TextView
                    android:id="@+id/totalIncomeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Income: "
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/totalExpenseTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Expense: "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/profitLossTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profit/Loss: "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    app:cardElevation="10dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/Feedscard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Feeds"
                            android:textColor="@color/green"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <ImageView
                            android:id="@+id/feedImage"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/feeds"
                            android:contentDescription="@string/Feeds"
                            android:scaleType="centerCrop" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    app:cardElevation="10dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/Financecard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/finance"
                            android:textColor="@color/green"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <ImageView
                            android:id="@+id/financeImage"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/ic_transactions"
                            android:contentDescription="@string/Transaction"
                            android:scaleType="centerCrop" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    app:cardElevation="10dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/Healthcard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/health"
                            android:textColor="@color/green"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <ImageView
                            android:id="@+id/healthImage"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/medical4"
                            android:contentDescription="@string/health"
                            android:scaleType="centerCrop" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    app:cardElevation="10dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/EventsCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Events"
                            android:textColor="@color/green"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <ImageView
                            android:id="@+id/eventsImage"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/events"
                            android:contentDescription="@string/Events"
                            android:scaleType="centerCrop" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="16dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
